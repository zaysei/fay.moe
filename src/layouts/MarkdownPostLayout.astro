---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="post-container">
    <p class="description"><em>{frontmatter.description}</em></p>
    <p class="pub-date">{frontmatter.pubDate.toString().slice(0, 10)}</p>

    <p class="author">Written by: {frontmatter.author}</p>

    <div class="image-container">
      <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
    </div>

    <div class="tags">
      {frontmatter.tags.map((tag) => (
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
      ))}
    </div>

    <slot />
  </div>
</BaseLayout>

<style>
  :root {
    --nord0: #2E3440;
    --nord1: #3B4252;
    --nord2: #434C5E;
    --nord3: #4C566A;
    --nord4: #D8DEE9;
    --nord5: #E5E9F0;
    --nord6: #ECEFF4;
    --nord7: #8FBCBB;
    --nord8: #88C0D0;
    --nord9: #81A1C1;
    --nord10: #5E81AC;
    --nord11: #BF616A;
    --nord14: #A3BE8C;
  }

  .post-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    padding: 2rem;
    background-color: var(--nord1);
    color: var(--nord6);
    border-radius: 8px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
  }

  .description {
    font-size: 1.2em;
    color: var(--nord8);
    margin-bottom: 1rem;
  }

  .pub-date, .author {
    margin-bottom: 1rem;
    color: var(--nord4);
  }

  .image-container {
    margin: 2rem 0;
  }

  .image-container img {
    max-width: 100%;
    border-radius: 8px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px var(--nord3);
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: var(--nord5);
    color: var(--nord1);
  }

  a {
    color: var(--nord8);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
    color: var(--nord7);
  }
</style>
