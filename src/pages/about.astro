---
import Footer from '../components/Footer.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import './styles/global.css';

const pageTitle = "About Me";

const identity = {
  name: "Zach",
  country: "The United States",
  hobbies: ["networking", "cyber security", "programming", "movies", "shows", "music"]
};

const skills = ["Networking", "Linux Administration", "Cyber Security", "Lua", "Python", "C++", "Go"];

---

<BaseLayout pageTitle={pageTitle}>
  <section class="about-section">
    <h2>Welcome to my About Me! Here are some things to know...</h2>
    <p>I am working on tihs website to provide the world with my journey in learning</p>

    <p>This page will be updated as I move along.</p>

    <p>Here are some facts about me...</p>
    <ul class="about-list">
      <li>My name is {identity.name}.</li>
      <li>I live in {identity.country}.</li>
      {identity.hobbies.length >= 2 && (
        <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}.</li>
      )}
    </ul>

    <p>My skills are...</p>
    <ul class="skills-list">
      {skills.map((skill) => (
        <li class="skill">{skill}</li>
      ))}
    </ul>
  </section>
</BaseLayout>

<style>
  .about-section {
    max-width: 800px;
    margin: 3rem auto;
    padding: 2rem;
    text-align: left;
  }

  h2 {
    color: #81a1c1;
    text-align: center;
    margin-bottom: 1.5rem;
  }

  p {
    color: #d8dee9;
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .about-list,
  .skills-list {
    list-style-position: inside; /* Align bullets with text */
    padding-left: 0;            /* Remove default padding */
    margin: 1rem 0;
  }

  .about-list li,
  .skills-list li {
    margin: 0.75rem 0;
    font-size: 1rem;
    color: #eceff4;
  }

  .skills-list .skill {
    color: #81a1c1;
    font-weight: bold;
  }
</style>
