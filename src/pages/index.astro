---
import BaseLayout from '../layouts/BaseLayout.astro';
import Greeting from '../components/greeting.jsx';
const pageTitle = "Home Page";
---
<BaseLayout pageTitle={pageTitle}>
  <!-- Only one main hero section here -->
  <section class="hero">
    <h1>Welcome to My Astro Site</h1>
    <p>Your one-stop blog for all things space and coding.</p>
    <button onclick="window.location.href='/blog'">Read Blog</button>

    <!-- Move the Greeting component inside the hero section -->
    <div class="greeting-container">
      <h2>A blog subtitle</h2>
      <Greeting client:load messages={["Hello", "Heya", "Hiii"]} />
    </div>
  </section>
</BaseLayout>