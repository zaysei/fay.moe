---
import BaseLayout from '../../layouts/BaseLayout.astro';
const allPosts = await Astro.glob('../posts/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
const pageTitle = "Tag Index";
---
<BaseLayout pageTitle={pageTitle}>
  <div class="tags">
    {tags.map((tag) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
</BaseLayout>
<style>
  a {
    color: #00539F;
    text-decoration: none; /* Remove underline for better readability */
  }

  a:hover {
    color: #003f7f; /* Darken color on hover for better indication */
    text-decoration: underline; /* Add underline on hover */
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center; /* Center the tags on the page */
    margin-top: 2rem;
  }

  .tag {
    margin: 0.5em;
    border: solid 1px #839791;
    border-radius: 8px; /* Smoother border */
    padding: 0.5em 1.2em;
    font-size: 1em; /* Adjusted font size for better readability */
    background-color: #F8FCFD;
    box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1); /* Add slight shadow for better look */
    transition: background-color 0.3s, transform 0.2s;
  }

  .tag:hover {
    background-color: #e3f2fd; /* Lighter blue on hover */
    transform: translateY(-2px); /* Lift effect */
    box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.15); /* Emphasize shadow on hover */
  }
</style>
